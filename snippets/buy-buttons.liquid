<div class="buy-buttons">
  <button
    type="submit"
    class="add-to-cart-button"
    id="add-to-cart-button"
    data-product-id="{{ product.id }}"
    aria-label="Add to Cart"
  >
    Add to Cart
  </button>

  <!-- Loading spinner -->
  <div class="loading-spinner" id="loading-spinner" style="display: none;">
    <svg viewBox="0 0 50 50">
      <circle class="path" cx="25" cy="25" r="20" fill="none" stroke-width="5"></circle>
    </svg>
  </div>

</div>

<script>
  function updateCartQuantity() {
    // Fetch the cart contents
    fetch('/cart.js')
      .then(response => response.json())
      .then(cart => {
        // Update all instances of the cart quantity on the page
        var cartItemCount = cart.item_count;
        
        // Update all elements displaying cart quantities
        document.querySelectorAll('.cart-quantity').forEach(function(element) {
          element.textContent = cartItemCount;
        });

      })
      .catch(error => {
        console.error('Error fetching cart:', error);
      });
  }
  

  document.addEventListener('DOMContentLoaded', function () {
    const addToCartButton = document.getElementById('add-to-cart-button');
    const productId = addToCartButton.dataset.productId;
    const spinner = document.getElementById('loading-spinner');
    const successMessage = document.getElementById('add-to-cart-message');
    const selectedVariant = document.getElementById('product-color').value;

    addToCartButton.addEventListener('click', function (event) {
      event.preventDefault();

      // Show loading spinner
      spinner.style.display = 'block';

      fetch('/cart/add.js', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          id: selectedVariant,
          quantity: 1,
        }),
      })
        .then((response) => {
          if (!response.ok) {
            throw new Error('Network response was not ok');
          }
          return response.json();
        })
        .then((data) => {
          // Hide loading spinner
          spinner.style.display = 'none';

          // Show success message
          addToCartButton.innerText = "Added to Cart!"

          // Optionally, update cart drawer or mini-cart here
          updateCartQuantity()
        })
        .catch((error) => {
          console.error('Error adding to cart:', error);
          spinner.style.display = 'none';
        });
    });
  });
</script>

<style>
  .buy-buttons{
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .button {
    background-color: #000;
    color: #fff;
    padding: 10px 20px;
    border: none;
    cursor: pointer;
    font-size: 16px;
  }

  .button:hover {
    background-color: #333;
  }

  .loading-spinner svg {
    animation: rotate 2s linear infinite;
    width: 20px;
    height: 20px;
  }

  .loading-spinner .path {
    stroke: #000;
    stroke-linecap: round;
    animation: dash 1.5s ease-in-out infinite;
  }

  @keyframes rotate {
    100% { 
      transform: rotate(360deg);
    }
  }

  @keyframes dash {
    0% {
      stroke-dasharray: 1, 150;
      stroke-dashoffset: 0;
    }
    50% {
      stroke-dasharray: 90, 150;
      stroke-dashoffset: -35;
    }
    100% {
      stroke-dasharray: 90, 150;
      stroke-dashoffset: -124;
    }
  }
</style>
